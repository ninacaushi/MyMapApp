<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mymap.MapsActivity" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation= "vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:digits="0123456789"
        android:text="radius"
        android:id="@+id/distance"
        android:textColor="#000000"
        android:imeOptions="actionDone"
        android:maxLength="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus"
        android:layout_marginTop="20dp"
        android:onClick="Click"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:text="Click me for buses" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_veloh"
        android:layout_marginTop="20dp"
        android:onClick="Click"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:text="Click me for veloh" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_closest_bus"
        android:layout_marginTop="20dp"
        android:onClick="Click"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:text="Closest buses" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_closest_veloh"
        android:layout_marginTop="20dp"
        android:onClick="Click"
        android:padding="10dp"
        android:paddingRight="10dp"
        android:text="Closest veloh" />
</LinearLayout>
</fragment>

